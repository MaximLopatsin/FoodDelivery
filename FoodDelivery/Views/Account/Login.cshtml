@using FoodDelivery.Models
@model LoginViewModel
@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Вход</h2>
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, htmlAttributes: new { @class = "text-danger" })
    <div class="row mb-2 mt-2">
        @Html.LabelFor(m => m.Login, new { @class = "col-md-1 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control", id = "Login" })
            @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-1 col-form-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        <div class="offset-2">
            <input type="submit" value="Войти" class="btn btn-secondary" />
        </div>
    </div>
}