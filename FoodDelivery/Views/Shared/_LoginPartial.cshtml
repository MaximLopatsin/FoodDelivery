@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown">Здравствуйте @System.Web.HttpContext.Current.User.Identity.Name</a>
                <div class="dropdown-menu dropdown-menu-right">
                    @Html.ActionLink("Информация", "Information", "Manage", null, htmlAttributes: new { @class = "dropdown-item" })
                    @Html.ActionLink("Настройки", "Settings", "Manage", null, htmlAttributes: new { @class = "dropdown-item" })
                    @Html.ActionLink("Корзина", "Cart", "Order", null, htmlAttributes: new { @class = "dropdown-item" })
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-danger" href="javascript:document.getElementById('logoutForm').submit()">Выход</a>
                </div>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "navbar-brand" })</li>
        <li class="nav-item">@Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "navbar-brand" })</li>
    </ul>
}