@model BLL.Dto.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var meals = ViewBag.Meals as List<BLL.Dto.Meal>;
}

    <div>
        <h4>Order</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.InstitutionName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InstitutionName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreationTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreationTime)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cost)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cost)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DeliveryCost)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DeliveryCost)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.Id)
            <div class="row">
                @Html.LabelFor(model => model.DeliveryType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.DeliveryType, htmlAttributes: new { @style = "height: 38px;" })
                </div>
            </div>
            <div class="form-group">
                <div class="offset-2 col-md-10">
                    <input type="submit" value="Сохранить" class="btn btn-secondary" id="send" />
                </div>
            </div>
        }
        <br />

    </div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => meals.First().Name)
        </th>
    </tr>

    @foreach (var item in meals)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Назад", "Index")
</p>
