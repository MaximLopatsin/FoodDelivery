@model BLL.Dto.Ingredient
@using HtmlHelpers.BeginCollectionItem

@using (Html.BeginCollectionItem("ingredients"))
{
    <div class="container" id="editorProduct" style="margin-bottom: 20px">
        <div class="row" style="line-height: 38px">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-6">
                @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control", style = "width: 550px; max-width: 500px;", onmousedown = "if(this.options.length>10){this.size=10;}", onchange = "this.size=0;", onblur = "this.size=0;" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <button id="deleteProduct">Удалить</button>
            </div>
        </div>
    </div>
}