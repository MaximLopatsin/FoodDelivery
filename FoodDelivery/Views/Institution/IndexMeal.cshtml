@model IEnumerable<BLL.Dto.Meal>

@{
    ViewBag.Title = "Блюда";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Создать новое блюдо", "CreateMeal", new { id = (int?)TempData["menuId"] }, new { id = "CreateMeal" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Подробности", "DetailsMeal", new { id = item.Id })
                @Html.ActionLink("Удалить", "DeleteMeal", new { id = item.Id })
            </td>
        </tr>
    }

</table>
