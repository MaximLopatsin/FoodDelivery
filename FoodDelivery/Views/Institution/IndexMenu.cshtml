@model IEnumerable<BLL.Dto.Menu>

@{
    ViewBag.Title = "IndexMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexMenu</h2>

<p>
    @Html.ActionLink("Создать новый", "CreateMenu", new { id = (int?)TempData["institutionId"] }, new { id = "CreateMenu" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "EditMenu", new { id = item.Id })
                @Html.ActionLink("Подробности", "DetailsMenu", new { id = item.Id })
            </td>
        </tr>
    }

</table>
