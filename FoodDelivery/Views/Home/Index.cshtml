@model FoodDelivery.Models.SearchContent
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Request.IsAuthenticated)
{
    <form method="post">
        <div class="row">
            @Html.LabelFor(model => model.SearchType, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-2">
                @Html.EnumDropDownListFor(model => model.SearchType, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <button class="btn btn-info col-md-1" style="height: 38px">Поиск</button>
        </div>
    </form>}
